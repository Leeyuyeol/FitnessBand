<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.techtown.fitnessband.HomeActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/app_bar_home">

    <Button
        android:id="@+id/push_up"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="팔굽혀펴기"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/fragment_bar"
        android:drawableLeft="@drawable/pushup"
        android:paddingLeft="45dp"
        android:textColor="@android:color/black"
        >

    </Button>

    <Button
        android:id="@+id/sit_up"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="윗몸일으키기"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/fragment_bar"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/situp"
        android:paddingLeft="45dp"
        ></Button>

    <Button
        android:id="@+id/squat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="스쿼트"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/fragment_bar"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/squat"
        android:paddingLeft="45dp"
        ></Button>

    <Button
        android:id="@+id/plank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="플랭크"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/fragment_bar"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/plank"
        android:paddingLeft="45dp"
        ></Button>

    <Button
        android:id="@+id/jogging"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="조깅"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/fragment_bar"
        android:textColor="@android:color/black"
        android:drawableLeft="@drawable/jogging"
        android:paddingLeft="45dp"
        ></Button>

</LinearLayout>








